<html>

  <body>

    <div class="project-header">
      <h1>Projects</h1>
    </div>

    {{! <grid-container> }}
    <div id="grid-container">
      {{#each project}}
        <a href="/project/{{this.dataValues.id}}" class="project-cards">
          <div class="card-image">
            <img src="{{this.dataValues.image}}" alt="" />
          </div>
          <div class="card-content">
            <h2>{{this.dataValues.name}}</h2>
            <p style="font-size: 10px;">{{this.dataValues.languages}}</p>
          </div>
        </a>
      {{/each}}
    </div>

    <div class="form-container">
      <h3>Contact Me</h3>
      <form action="/inquiry" method="POST">
        <div class="form-group">
          <input
            type="text"
            id="name"
            name="name"
            placeholder="Name"
            required
          />
        </div>
        <div class="form-group">
          <input
            type="email"
            id="emailAddress"
            name="email"
            placeholder="Email"
            required
          />
        </div>
        <div class="form-group">
          <textarea
            id="message"
            name="message"
            placeholder="Enter your message here. Please be as detailed as you can."
            required
          ></textarea>
        </div>
        <div class="form-group">
          <button type="submit" class="submitBtn">Submit</button>
        </div>
      </form>
    </div>
  </body>

</html>