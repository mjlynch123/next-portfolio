<html>
  <body style="background-color: #e5e5e5;">
    <div class="main-area">
      <div class="image">
        <img src="{{project.dataValues.image}}" alt="" />
      </div>

      <div class="description">
        <h4>{{project.dataValues.name}}</h4>
        <br />
        <p style="margin-bottom: 30px;">langauges:
          {{project.dataValues.languages}}</p>
        <a
          href="{{project.dataValues.github_link}}"
          target="_blank"
          class="link"
        >Github Repo</a>
        <br />
        <br />
        {{#if project.dataValues.live_url}}
          <a
            href="{{project.dataValues.live_url}}"
            target="_blank"
            class="link"
          >Live URL</a>
        {{else}}
          <p>No live URL available</p>
        {{/if}}

      </div>
    </div>

    <div class="description-area">
      <h1>Description</h1>
      <p>{{project.dataValues.description}}</p>
    </div>

    <form
      action="/project/{{project.dataValues.id}}"
      method="post"
      style="text-align: center;"
    >
      <button class="deleteBtn">Delete</button>
    </form>

    <form
      action="/update/{{project.dataValues.id}}"
      method="post"
      class="update-form"
    >
      <h3 style="text-align: center;">Update Form</h3>
      <label for="image">Image:</label><br />
      <input
        type="text"
        id="project-image"
        name="image"
        value="{{project.dataValues.image}}"
        required
      />
      <label for="name">Name:</label><br />
      <input
        type="text"
        id="project-name"
        name="name"
        value="{{project.dataValues.name}}"
        style="width: 100%;"
        required
      />
      <br />
      <label for="languages">Languages:</label><br />
      <input
        type="text"
        id="languages"
        name="languages"
        value="{{project.dataValues.languages}}"
        required
      />
      <br />
      <label for="github_link">Github Link:</label><br />
      <input
        type="text"
        id="github_link"
        name="github_link"
        value="{{project.dataValues.github_link}}"
        required
      />
      <br />
      <label for="live_url">Live URL:</label><br />
      <input
        type="text"
        id="live_url"
        name="live_url"
        value="{{project.dataValues.live_url}}"
      />
      <br />
      <label for="description">Description:</label><br />
      <textarea
        id="project-description"
        name="description"
        rows="5"
      >{{project.dataValues.description}}</textarea>
      <br />
      <button type="submit" class="updateBtn">Update</button>
    </form>

    <style>
      .main-area { display: flex; margin: 10px; max-width: 100%; } .image {
      width: 350px; height: 220px; margin: 10px; } .image img { position:
      relative; object-fit: cover; width: 348px; height: 219px; } .description {
      margin-top: 10px; } .link { margin-top: 20px; } .description-area {
      border-bottom: 1px solid; margin: 10px; padding: 10px; } .description-area
      p { font-size: 12px; }
    </style>
  </body>
</html>